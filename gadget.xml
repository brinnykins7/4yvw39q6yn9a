<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="My First OpenSocial Gadget">
    <Require feature="opensocial"/>
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
      <html>
        <head>
          <script>
            function updateHeight() {
              gadgets.window.adjustHeight();
            }
          </script>
        </head>
        <body onload="updateHeight()">
          <h1>Welcome to My Gadget!</h1>
          <p>This is my first OpenSocial gadget.</p>
        </body>
      </html>
    ]]>
  </Content>
</Module>
